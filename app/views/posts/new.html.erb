<body class = "w3-deep-purple">
<div class="container">

<div class="w3-container w3-deep-purple">
 <h1 class="newPost">Create a Post !</h1>
</div>
   
<div class="w3-container">
<%= form_for :post, url: posts_path do |f| %>
    <div>
   <p>
        <%= f.label :title %> <br>
        <%= f.text_field :title %>
    </p>
    </div>

    <div>
     <p>
    <%= f.label :body %> <br>
    <%= f.text_area :body %>
    </p>

    </div>
    <p>
    <%= f.submit %>
    </p>

    </div>
<% end %>
 

   
    
   
</body>