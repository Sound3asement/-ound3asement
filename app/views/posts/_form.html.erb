        <div class="s3-errors">
            <h2><%= pluralize(@post.errors.count,"error") %> stopped this post from saving</h2>
            <ul>
            <% @post.errors.full_messages.each do |msg| %>
            <li class="s3-errors"> <%= msg %> </li>
         <% end %>
        </ul>
        </div>
    <% end %>
    <div>
   <p>
        <%= f.label :title %> <br>
        <%= f.text_field :title %>
    </p>
    </div>

    <div>
     <p>
    <%= f.label :body %> <br>
    <%= f.text_area :body %>
    </p>

    </div>
